<!-- Modal chat -->
<div class="modal fade" id="chatModal" tabindex="-1" aria-labelledby="chatModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-scrollable position-fixed bottom-0 end-0 m-3"
        style="max-height: 60%;">
        <div class="modal-content">
            <div class="modal-header p-0">
                <!-- Thay thế bằng thanh chứa 2 tab -->
                <ul class="nav nav-tabs w-100" id="chatTab" role="tablist">
                    <li class="nav-item flex-grow-1" role="presentation">
                        <button class="nav-link active w-100 text-center" id="messages-tab" data-bs-toggle="tab"
                            data-bs-target="#messages" type="button" role="tab" aria-controls="messages"
                            aria-selected="true">Tin nhắn</button>
                    </li>
                    <li class="nav-item flex-grow-1" role="presentation">
                        <button class="nav-link w-100 text-center" id="contacts-tab" data-bs-toggle="tab"
                            data-bs-target="#contacts" type="button" role="tab" aria-controls="contacts"
                            aria-selected="false">Danh bạ</button>
                    </li>
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-2" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </ul>
            </div>
            <div class="modal-body">
                <div class="tab-content" id="chatTabContent">
                    <!-- Tab Tin nhắn -->
                    <div class="tab-pane fade show active" id="messages" role="tabpanel" aria-labelledby="messages-tab">
                        <div class="messages mb-3" style="max-height: 200px; overflow-y: auto;">
                            <!-- Tin nhắn sẽ hiển thị ở đây -->
                            <div class="message my-2 p-2 bg-light rounded">
                                Chào bạn! Tôi có thể giúp gì cho bạn?
                            </div>
                        </div>
                        <input type="text" class="form-control" placeholder="Nhập tin nhắn...">
                    </div>
                    <!-- Tab Danh bạ -->
                    <div class="tab-pane fade" id="contacts" role="tabpanel" aria-labelledby="contacts-tab">
                        <ul class="list-group" id="list-friends">
                            {{#each findFriend}}
                            <!-- Danh sách liên hệ sẽ hiển thị ở đây -->
                            <button class="list-group-item connect-chat" data-id="{{this._id}}">{{this.name}}</button>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


