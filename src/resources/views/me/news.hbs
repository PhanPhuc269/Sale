<!-- Modal -->
<div class="modal fade" id="galleryModal" tabindex="-1" aria-labelledby="galleryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        <!-- Nội dung gallery sẽ được thêm vào đây -->
                    </div>
                    <!-- Add Pagination -->
                    <div class="swiper-pagination"></div>
                    <!-- Add Navigation -->
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        let swiper;
        if(!swiper) {
            swiper = new Swiper('.swiper-container', {
                loop: true,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                
            });
        }

        // Bắt sự kiện khi hình ảnh/video được nhấp vào
        const galleryItems = document.querySelectorAll('.gallery-item img, .gallery-item video');
        galleryItems.forEach((item, index) => {
            item.addEventListener('click', () => {
                const gallery = item.closest('.gallery'); // Lấy gallery chứa hình ảnh hoặc video được nhấp vào
                const swiperWrapper = document.querySelector('.swiper-wrapper');
                if (gallery && swiperWrapper) {
                    swiperWrapper.innerHTML = ''; // Xóa nội dung cũ
                    const galleryItems = gallery.querySelectorAll('.gallery-item');
                    galleryItems.forEach((galleryItem, i) => {
                        const swiperSlide = document.createElement('div');
                        swiperSlide.classList.add('swiper-slide');
                        const slItem=galleryItem.cloneNode(true).querySelector('img', 'video');
                        swiperSlide.appendChild(slItem); // Thêm tất cả các hình ảnh hoặc video
                        {{!-- if (i != index) {
                            slItem.classList.add('dis-none'); // Ẩn các hình ảnh hoặc video không được nhấp vào
                        } --}}
                        swiperWrapper.appendChild(swiperSlide);
                    });
                }
                swiper.update(); // Cập nhật Swiper
                const modal = new bootstrap.Modal(document.getElementById('galleryModal'));
                modal.show(); // Hiển thị modal
                swiper.slideTo(index); // Chuyển đến hình ảnh hoặc video đầu tiên trong modal

                // Hiển thị các slide khi Swiper chuyển slide
                {{!-- swiper.on('slideChange', function () {
                    const slides = swiper.slides;
                    console.log(swiper.activeIndex);
                    slides.forEach((slide, i) => {
                        const slideItem = slide.closest('img, video');
                        if (i == swiper.activeIndex) {
                            slideItem.classList.remove('dis-none'); // Hiển thị slide hiện tại
                        } else {
                            slideItem.classList.add('dis-none'); // Ẩn các slide không được hiển thị
                        }
                    });
                }); --}}
            });
        });
    });
</script>
