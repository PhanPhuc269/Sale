<div class="container mt-4">
    <h2 class="text-grt mb-3">Danh sách khóa học</h2>
    <div class="row">
        {{#each courses}}
        <div class="col-md-6 col-lg-3 mb-4 mt-4">
            <div class="card cash-coursse-item bg-card" style="width: 18rem;">
                <a href="/courses/{{this.slug}}">
                <div class="card-img-container">
                    <img src="{{this.image}}" class="card-img-top" alt="..."></a>
                </div>
                
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                    <h5 class="card-title ">{{this.name}}</h5></a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">Học ngay</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>